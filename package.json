{
  "name": "html-to-svg",
  "version": "0.0.0",
  "description": "Render HTML to SVG",
  "source": "src/index.js",
  "exports": {
    "require": "./dist/html-to-svg.js",
    "default": "./dist/html-to-svg.modern.js"
  },
  "amdName": "HtmlToSvg",
  "main": "./dist/html-to-svg.js",
  "module": "./dist/html-to-svg.module.js",
  "unpkg": "./dist/html-to-svg.umd.js",
  "scripts": {
    "build": "npm run test && microbundle",
    "test": "npm run test:build -- -w & light-server -s test -p 1337 -w 'test, test/**'",
    "test:build": "microbundle -o test -f umd --external all --compress false",
    "preversion": "npm run build && npm run test:build && git add dist test ",
    "postversion": "git push && git push --tags && ghp test -f && npm publish"
  },
  "files": [
    "dist"
  ],
  "author": "Arnaud Juracek",
  "license": "MIT",
  "homepage": "https://github.com/tooooools/html-to-svg#readme",
  "bugs": {
    "url": "https://github.com/tooooools/html-to-svg/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:tooooools/html-to-svg.git"
  },
  "dependencies": {
    "opentype.js": "^1.3.4"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "esm": "^3.2.25",
    "ghp": "^1.7.0",
    "light-server": "^2.9.1",
    "microbundle": "^0.15.1"
  },
  "private": false
}
